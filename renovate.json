{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "schedule:weekly"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 6am on monday"
  ],
  "labels": [
    "dependencies",
    "automated"
  ],
  "packageRules": [
    {
      "description": "Group Chainguard base images",
      "matchDatasources": [
        "docker"
      ],
      "groupName": "chainguard-base-images",
      "matchPackageNames": [
        "/^cgr\\.dev/chainguard//",
        "/^alpine$/"
      ]
    },
    {
      "description": "Group Distroless base images",
      "matchDatasources": [
        "docker"
      ],
      "groupName": "distroless-base-images",
      "matchPackageNames": [
        "/^gcr\\.io/distroless//"
      ]
    },
    {
      "description": "Group UBI9 base images",
      "matchDatasources": [
        "docker"
      ],
      "groupName": "ubi9-base-images",
      "matchPackageNames": [
        "/^registry\\.access\\.redhat\\.com/ubi9/"
      ]
    }
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
